<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% semester =[['SP19','SP19'],['AU19','AU19'],['SP20','SP20']] %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
 
  <div class="field">
    <%= form.label :course_id %>
    <%= select_tag(:course_id, options_for_select(@courses), :prompt => "select the answer") %>
  </div>


  <div class="field">
    <%= form.label :semester %>
    <%= select_tag(:semester, options_for_select(semester), :prompt => "select the answer") %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
