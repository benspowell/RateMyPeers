<% if !current_user.try(:admin?) %>
<h1>Groups</h1>
<% else %>
<h1>Manage Groups</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Members</th>
      <th>Class</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <!-- If user signed is not an admin but is part of the group, show only group name and members --> 
    <% @groups.each do |group| %>
      <% if user_signed_in? and !current_user.try(:admin?) %>
      	<% for i in 0...group.membership_ids.length %>
           <% if current_user.membership_ids.include? group.membership_ids[i] %>
      	      <tr>
                 <td><%= group.gname %></td>
	               <td><%= group.membership_ids.length %></td>
                 <td><%= Course.find(group.course_id).cname %></td>
                 <td><%= link_to 'Show',group, :class=>"action"%></td>
              </tr>
           <% end %>
        <% end %>
      <% end %>
    <% end %>

    <!-- If user signed in is admin and owner of group, show each group name, members, and link to detail of each group -->
    <% if current_user.try(:admin?) %>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.gname %></td>
          <td><%= group.membership_ids.length %></td>
          <td><%= Course.find(group.course_id).cname %></td>
          <td><%= link_to 'Show', memberships_path(:group_id => group.id), :class=>"action"%>
                  
                  <!-- Check if all evals previously sent out are completed --> 
                  <% evalsFinished = true %>
                  <% for i in 0...group.rating_ids.length %>
                      <% if Rating.find(group.rating_ids[i]).attempted == false %>
                        <% evalsFinished = false %>
                      <% end %>
                  <% end %>
<!-- Show option to send evals to students group if all other evals sent out have been completed only -->
                  <% if group.rating_ids.empty? || evalsFinished %>
                  <% if group.membership_ids.length > 1 %>
                    <%= link_to 'Send Evaluations', group, data: { confirm: 'Are you sure you want to open evaluations for ' + group.gname + '?'}, :class=>"action" %>
                  <% end %>
                  <% end %>

                  <!-- Show buttons to add new members to groups -->
                  <%= link_to 'Add Member', new_membership_path(:group_id => group.id), :class=>"action" %>

                  <!-- Show evaluation results if any exist -->
                  <% resultsExist = false %>
                  <% for i in 0...group.rating_ids.length %>
                    <% if Rating.find(group.rating_ids[i]).attempted == true %>
                      <% resultsExist = true %>
                    <% end %>
                  <% end %>

                  <!-- Show option to see evaluation results if they exist --> 
                  <% if resultsExist %>
                    <%= link_to 'Results', ratings_path(:group_id => group.id), :class=>"action" %>
                  <% end %>
              <%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure you want to delete ' + group.gname + '?'}, :class=>"action" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br><%= link_to 'Back to Groups', groups_path, :class => "btn btn-default" %>
<br><%= link_to 'Back to Classes', courses_path, :class => "btn btn-default" %>
