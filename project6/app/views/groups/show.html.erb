<h1><%= @group.gname %></h1>
<% if @group.membership_ids.length == 0 %>	
    <%= "There are currently no members in this group" %>	
<% else %>	
<table>
	<thead>
	<tr>
		<th>Name</th>
		<th>Score</th>
		<th>Comments</th>
		<th>Actions</th>
	</tr>
	</thead>
	<tbody>
	<% for i in 0...@group.membership_ids.length %>
	<tr>
		<td><%= User.find(Membership.find(@group.membership_ids[i]).user_id).Fname %> <%= User.find(Membership.find(@group.membership_ids[i]).user_id).Lname %></td>
		<td></td>
		<td></td>
		<% @users = User.all.collect %>
			<% @members = [] %>
			<% @users.each do |user| %>
				<% if user.membership_ids.include? @group.membership_ids[i] %>
					<% @members.push user %> 
				<% end %>
			<% end %>

			<% @members.each_with_index do |member, n|  %>
				<% @rating = Rating.new(:group_id => @group.id, :user_id => current_user.id, :ratee_id => @members[n].id) %> 
				<% @rating.save %>
			<% end %>
		<td><% if @group.membership_ids != current_user.id %>
				<%= link_to 'Rate', new_rating_path(:rating_id => @rating.id) %>
			<% end %>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>
<% end %>
    <br><%= link_to 'Back to Groups', groups_path, :class => "btn btn-default" %>
