<h1>New Instructors Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@instructor) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :username %> <p>Usernames must be 'lastname.#'</p>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %> <p>Password must be longer than 6 characters</p>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create Instructor Account", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>

<%= link_to 'Back', root_path %>
